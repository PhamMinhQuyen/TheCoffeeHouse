<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="70dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_trove"
            android:drawableLeft="@drawable/ve1"
            android:layout_marginLeft="20dp"
            android:layout_width="38dp"
            android:layout_height="30dp"/>
        <EditText
            android:hint="Tìm kiếm sản phẩm"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/linerlayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <TextView
            android:paddingTop="10dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Từ khóa hot"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:text="Sôcôla Lúa Mạch Nóng"
                    android:layout_height="wrap_content"></Button>
                <Button
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:text="Sôcôla Lúa Mạch đá xay"
                    android:layout_height="wrap_content"></Button>
                <Button
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:text="Cà Phê Lúa Mạch Nóng"
                    android:layout_height="wrap_content"></Button>
                <Button
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:text="Macca Phủ Socola"
                    android:layout_height="wrap_content"></Button>
                <Button
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:text="Cà phê Lúa Mạch đá"
                    android:layout_height="wrap_content"></Button>
                <Button
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:text="Bạc Sỉu"
                    android:layout_height="wrap_content"></Button>
            </LinearLayout>


        </ScrollView>

    </LinearLayout>

</LinearLayout>