<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ln_ttcanhan_user"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@drawable/footer"
            >

            <ImageView
                android:id="@+id/tv_dangnhap"
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:layout_height="80dp"
                android:text="Đăng nhập"
                android:src="@drawable/avt" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:paddingTop="15dp"
                    android:fontFamily="times new roman"
                    android:text="Sergio Minh Quyền"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:paddingTop="8dp"
                    android:fontFamily="times new roman"
                    android:text="Khách hàng mới"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/footer"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="The Coffee House Rewards"
                android:drawableLeft="@drawable/ic_action_coffeehouse"
                android:drawablePadding="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textSize="17dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Thông tin tài khoản"
                android:drawableLeft="@drawable/ic_action_lichsu"
                android:drawablePadding="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:textSize="17dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Nhạc đang phát"
                android:drawableLeft="@drawable/ic_action_music"
                android:drawablePadding="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:textSize="17dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Lịch sử"
                android:drawableLeft="@drawable/ic_action_coffeehouse"
                android:drawablePadding="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:textSize="17dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Giúp đỡ"
                android:drawableLeft="@drawable/ic_action_giupdo"
                android:drawablePadding="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:textSize="17dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Cài đặt"
                android:drawableLeft="@drawable/ic_action_caidat"
                android:drawablePadding="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:textSize="17dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/bt_dangxuat"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="times new roman"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Đăng xuất"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_tintuc_user"
            android:layout_width="101dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/ic_action_tintuc"
            android:background="@drawable/footer"
            android:textStyle="bold"
            android:textSize="10dp"
            android:text="Tin tức"/>
        <Button
             android:id="@+id/bt_dathang_user"
            android:layout_width="101dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/ic_action_dathang"
            android:background="@drawable/footer"
            android:textStyle="bold"
            android:textSize="10dp"
            android:text="Đặt hàng"/>
        <Button

            android:layout_width="101dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/ic_action_cuahang"
            android:background="@drawable/footer"
            android:textStyle="bold"
            android:textSize="10dp"
            android:text="Cửa hàng"/>
        <Button

            android:layout_width="101dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/ic_action_taikhoan"
            android:background="@drawable/footer"
            android:textStyle="bold"
            android:textSize="10dp"
            android:text="Tài khoản"/>

    </LinearLayout>

</LinearLayout>