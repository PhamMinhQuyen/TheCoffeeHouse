<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/linerlayout"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/tv_close"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_action_close"
            android:paddingLeft="20dp"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:fontFamily="times new roman"
            android:gravity="center_vertical"
            android:paddingLeft="80dp"
            android:text="Thông báo"

            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/ic_action_menu_tb"
            android:layout_marginLeft="90dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/footer"
        android:layout_height="200dp"
        android:src="@drawable/cf_hinhtron"/>
    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:layout_height="50dp"
        android:textSize="17dp"
        android:text="Bạn đang không có thông báo nào"/>
    <Button
        android:id="@+id/bt_thongbao"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quay lại trang chính"
        android:textColor="#FFFFFF"
        android:background="@drawable/bt_email"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
</LinearLayout>