<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/linerlayout"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/tv_close"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_action_close"
            android:paddingLeft="20dp"
            />
        <TextView
            android:paddingLeft="80dp"
            android:layout_width="match_parent"
            android:text="Coupon của bạn"
            android:textColor="#000000"
            android:fontFamily="times new roman"
            android:gravity="center_vertical"

            android:textSize="20dp"
            android:layout_height="60dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:background="@drawable/linerlayout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <EditText
            android:layout_gravity="center_vertical"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/edittext"
            android:hint="Nhập mã khuyến mãi"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:src="@drawable/mathe"
                android:layout_height="30dp"/>
            <Button
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button1"
                android:text="Áp dụng"
                android:textColor="#FF9933"
                android:layout_height="35dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/footer"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:src="@drawable/hmphantram"
            android:paddingLeft="20dp"
            android:layout_gravity="center_vertical"
            android:layout_height="80dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:paddingRight="40dp"
                android:paddingLeft="20dp"

                android:textColor="#000000"
                android:textSize="15dp"
                android:text="-Ưu đãi 20% khi đặt Pick Up  (tự đến lấy) từ..."
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hạn sử dụng đến 31/12/2020"
                android:paddingLeft="20dp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/footer"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:src="@drawable/bmk"
            android:paddingLeft="20dp"
            android:layout_gravity="center_vertical"
            android:layout_height="80dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:paddingRight="40dp"
                android:paddingLeft="20dp"

                android:textColor="#000000"
                android:textSize="15dp"
                android:text="-Ưu đãi giảm 40.000đ cho đơn hàng từ ..."
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hạn sử dụng đến 31/12/2020"
                android:paddingLeft="20dp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/footer"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:src="@drawable/mua1tang1"
            android:paddingLeft="20dp"
            android:layout_gravity="center_vertical"
            android:layout_height="80dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:paddingRight="40dp"
                android:paddingLeft="20dp"

                android:textColor="#000000"
                android:textSize="15dp"
                android:text="- Mua 1 tặng 1 cho đơn hàng delivery (giao..."
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hạn sử dụng đến 22/12/2020"
                android:paddingLeft="20dp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>