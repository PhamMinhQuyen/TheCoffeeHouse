<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="270dp"
        android:background="@drawable/footer">

        <TextView
            android:id="@+id/tv_ttcanhan"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:drawableLeft="@drawable/ic_action_cancle"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/avt"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Sergio Minh Quyền"
            android:fontFamily="times new roman"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Khách hàng mới"
            android:textSize="15dp"
            android:fontFamily="times new roman"

            android:gravity="center_horizontal"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:text="Thông tin cá nhân"
            android:textStyle="bold"
            android:fontFamily="times new roman"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_doi"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp"
            android:textColor="#0000FF"
            android:textSize="15dp"
            android:text="Đổi"
            android:textStyle="bold"
            android:fontFamily="times new roman"
            android:gravity="center_vertical"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@drawable/textview">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingTop="10dp"
            android:text="Tên"
            android:fontFamily="times new roman"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingTop="5dp"
            android:text="Sergio Minh Quyền"
            android:fontFamily="times new roman"
            android:textStyle="bold"

            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@drawable/textview">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingTop="10dp"
            android:text="Sinh nhật"
            android:fontFamily="times new roman"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingTop="5dp"
            android:text="[Chưa cập nhật]"
            android:fontFamily="times new roman"
            android:textStyle="bold"

            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@drawable/textview">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingTop="10dp"
            android:text="Số điện thoại"
            android:fontFamily="times new roman"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingTop="5dp"
            android:text="0367148396"
            android:fontFamily="times new roman"
            android:textStyle="bold"

            android:layout_marginLeft="20dp"
            />
    </LinearLayout>

</LinearLayout>