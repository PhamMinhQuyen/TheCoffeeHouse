<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/footer"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_ttcanhan"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:src="@drawable/avt"
            android:paddingLeft="20dp"/>

        <LinearLayout
            android:id="@+id/ln_ttcanhan"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Sergio Minh Quyền"
                android:paddingLeft="10dp"
                android:fontFamily="times new roman"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Khách hàng mới"
                android:paddingLeft="10dp"
                android:fontFamily="times new roman"/>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="60dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"

            android:drawableRight="@drawable/ic_action_thbao1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/bt_tichdiem"
            android:layout_width="105dp"
            android:layout_height="70dp"
            android:background="@drawable/footer"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:fontFamily="times new roman"
            android:textSize="10dp"
            android:drawableTop="@drawable/ic_action_tichdiem"
            android:text="Tích điểm"/>
        <Button
            android:id="@+id/bt_dathang_banner"
            android:layout_width="105dp"
            android:paddingTop="10dp"
            android:layout_height="70dp"
            android:text="Đặt hàng"
            android:fontFamily="times new roman"
            android:textStyle="bold"
            android:textSize="10dp"
            android:background="@drawable/footer"
            android:drawableTop="@drawable/ic_action_dh1"/>
        <Button
            android:id="@+id/bt_coupon"
            android:layout_width="105dp"
            android:paddingTop="10dp"
            android:layout_height="70dp"
            android:text="Coupon"
            android:textStyle="bold"
            android:fontFamily="times new roman"
            android:textSize="10dp"
            android:background="@drawable/footer"
            android:drawableTop="@drawable/ic_action_phieuhang"/>
        <Button
            android:id="@+id/bt_rewwards"
            android:layout_width="105dp"
            android:paddingTop="10dp"
            android:layout_height="70dp"
            android:text="Rewards"
            android:textStyle="bold"
            android:fontFamily="times new roman"
            android:textSize="10dp"
            android:background="@drawable/footer"
            android:drawableTop="@drawable/ic_action_qua"/>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="525dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Ưu đãi đặc biệt"

                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="15dp"/>

            //Horizontal Recycler View

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/list1"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Cập nhật từ nhà"

                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/list2"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="#CoffeeLover"

                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/list3"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">

        <Button

            android:layout_width="101dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/ic_action_tintuc"
            android:background="@drawable/footer"
            android:textStyle="bold"
            android:textSize="10dp"
            android:text="Tin tức"/>
        <Button
            android:id="@+id/bt_dathang"
            android:layout_width="101dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/ic_action_dathang"
            android:background="@drawable/footer"
            android:textStyle="bold"
            android:textSize="10dp"
            android:text="Đặt hàng"/>
        <Button

            android:layout_width="101dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/ic_action_cuahang"
            android:background="@drawable/footer"
            android:textStyle="bold"
            android:textSize="10dp"
            android:text="Cửa hàng"/>
        <Button
            android:id="@+id/bt_taikhoan"
            android:layout_width="101dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/ic_action_taikhoan"
            android:background="@drawable/footer"
            android:textStyle="bold"
            android:textSize="10dp"
            android:text="Tài khoản"/>

    </LinearLayout>


</LinearLayout>