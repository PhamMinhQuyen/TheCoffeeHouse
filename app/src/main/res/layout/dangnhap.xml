<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="430dp"
            android:layout_height="250dp"

            android:src="@drawable/imgdn"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Chào bạn,"
            android:textStyle="bold"
            android:fontFamily="times new roman"
            android:layout_marginLeft="20dp"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Nhập số điện thoại để tiếp tục"
            android:textStyle="bold"
            android:fontFamily="times new roman"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@drawable/img">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"

            android:src="@drawable/vietnam"></ImageView>
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="50dp"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/ic_action_cbb"
            android:layout_height="50dp"/>

    </LinearLayout>



        <TextView
            android:id="@+id/tv_sdt"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="times new roman"
            android:textSize="17dp"
            android:paddingLeft="15dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"

            android:hint="Số điện thoại"
            android:background="@drawable/edittext"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="150dp"
        android:layout_height="200dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Hoặc đăng nhập bằng"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <Button
                android:background="@drawable/bt_fb"
                android:layout_width="170dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="times new roman"
                android:text="Facebook"
                android:textColor="#FFFFFF"
                android:layout_height="45dp"/>
            <Button
                android:background="@drawable/bt_email"
                android:layout_width="170dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="times new roman"
                android:text="Email"
                android:textColor="#FFFFFF"
                android:layout_height="45dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_boqua"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:fontFamily="times new roman"
            android:textColor="#3333FF"
            android:textStyle="bold"
            android:text="Bỏ qua"
            android:textSize="15dp"
            />

    </LinearLayout>

</LinearLayout>